<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p id="notice" class="alert alert-success"><%= t('views.notice') %></p>
    <% end %>
    <% if alert %>
      <p id="alert" class="alert alert-danger"><%= t('views.alert') %></p>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to t("views.common.logout"), destroy_user_session_path, method: :delete %>
    <% end %>
    <%= yield %>
  </body>
</html>
