<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @report.body %>
</p>

<% if @report.user_id == current_user.id %>
  <%= link_to 'Edit', edit_report_path(@report) %> |
<% end %>
<%= link_to 'Back', reports_path %>

<p></p>
<div>
  <%= render "shared/comment_form", model: @report_comment, model_name: 'report_comment', data_id: @report.id %>
</div>

<div>
  <% @comments.each do |comment| %>
    <strong>コメント:</strong>
    <p><%= comment.content %></p>
    <p>
      <% if comment.user.name %>
        <strong>名前:</strong>
        <%= comment.user.name %>
      <% else %>
        <strong>メールアドレス:</strong>
        <%= comment.user.email %>
      <% end %>
    </p>
  <% end %>
</div>
