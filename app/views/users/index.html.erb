<h1><%= t('views.users') %></h1>

<table>
  <thead>
  <tr>
    <th><%= t(User.human_attribute_name(:email)) %></th>
    <th><%= t(User.human_attribute_name(:postal_code)) %></th>
    <th><%= t(User.human_attribute_name(:address)) %></th>
    <th><%= t(User.human_attribute_name(:introduction)) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.postal_code %></td>
      <td><%= user.address %></td>
      <td><%= user.introduction %></td>
      <td><%= link_to t('views.common.show'), user %></td>
      <% if user.id == current_user.id %>
        <td><%= link_to t('views.common.edit'), edit_user_path(user) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @users %>

<br>
