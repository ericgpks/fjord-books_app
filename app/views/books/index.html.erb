<p id="notice"><%= notice %></p>

<h1><%= t(Book.model_name.human) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t(Book.human_attribute_name(:title)) %></th>
      <th><%= t(Book.human_attribute_name(:memo)) %></th>
      <th><%= t(Book.human_attribute_name(:author)) %></th>
      <th><%= t(Book.human_attribute_name(:picture)) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t(Book.human_attribute_name(:show)), book %></td>
        <td><%= link_to t(Book.human_attribute_name(:edit)), edit_book_path(book) %></td>
        <td><%= link_to t(Book.human_attribute_name(:destroy)), book, method: :delete, data: { confirm: t('books.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(Book.human_attribute_name(:new)), new_book_path %>
